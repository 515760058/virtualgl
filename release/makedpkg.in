#!/bin/sh

set -u
set -e
trap onexit INT
trap onexit TERM
trap onexit EXIT

TMPDIR=

onexit()
{
	if [ ! "$TMPDIR" = "" ]; then
		sudo rm -rf $TMPDIR
	fi
}

makedeb()
{
	SUPPLEMENT=$1
	PACKAGE_NAME=$APPNAME

	if [ $SUPPLEMENT = 1 ]; then
		PACKAGE_NAME=$APPNAME\32
		DEBARCH=amd64
		__LIB=lib32
	else
		__LIB=lib
	fi

	umask 022
	rm -f $PACKAGE_NAME\_$VERSION\_$DEBARCH.deb
	TMPDIR=`mktemp -d /tmp/$APPNAME-build.XXXXXX`
	mkdir $TMPDIR/DEBIAN

	make install DESTDIR=$TMPDIR
	mkdir -p $TMPDIR/usr

	if [ $SUPPLEMENT = 1 ]; then

		cat pkgscripts/deb-control | sed s/i386/$DEBARCH/g \
			| sed s/VirtualGL/$PACKAGE_NAME/g > $TMPDIR/DEBIAN/control

		rm -rf $TMPDIR/opt/$APPNAME/doc
		rm -rf $TMPDIR/opt/$APPNAME/include
		mv $TMPDIR/opt/$APPNAME/bin/glxspheres $TMPDIR/opt/$APPNAME/
		rm -rf $TMPDIR/opt/$APPNAME/bin
		mkdir -p $TMPDIR/opt/$APPNAME/bin
		mv $TMPDIR/opt/$APPNAME/glxspheres $TMPDIR/opt/$APPNAME/bin/

		mv $TMPDIR/opt/$APPNAME/lib $TMPDIR/usr/lib32
		rm $TMPDIR/opt/$APPNAME/fakelib/libGL.so
		ln -fs /usr/lib32/librrfaker.so $TMPDIR/opt/$APPNAME/fakelib/libGL.so

	else

		cp pkgscripts/deb-control $TMPDIR/DEBIAN/control

		mkdir -p $TMPDIR/usr/bin
		if [ "$DEBARCH" = "amd64" ]; then
			mv $TMPDIR/opt/$APPNAME/bin/glxspheres $TMPDIR/opt/$APPNAME/bin/glxspheres64
		fi
		for i in vglclient vglconfig vglconnect vglgenkey vgllogin vglrun vglserver_config; do
			mv $TMPDIR/opt/$APPNAME/bin/$i $TMPDIR/usr/bin/
		done
		pushd $TMPDIR/usr/bin
		for i in *; do
			ln -fs /usr/bin/$i $TMPDIR/opt/$APPNAME/bin/; done
		popd

		mkdir -p $TMPDIR/usr/include
		for i in rr.h rrtransport.h; do
			mv $TMPDIR/opt/$APPNAME/include/$i $TMPDIR/usr/include/
			ln -fs /usr/include/$i $TMPDIR/opt/$APPNAME/include/$i
		done

		mkdir -p $TMPDIR/usr/share/doc
		mv $TMPDIR/opt/$APPNAME/doc $TMPDIR/usr/share/doc/$APPNAME-$VERSION
		ln -fs /usr/share/doc/$APPNAME-$VERSION $TMPDIR/opt/$APPNAME/doc

		mv $TMPDIR/opt/$APPNAME/lib $TMPDIR/usr/lib
		if [ "$DEBARCH" = "amd64" ]; then
			rm $TMPDIR/opt/$APPNAME/fakelib/64/libGL.so
			ln -fs /usr/lib/librrfaker.so $TMPDIR/opt/$APPNAME/fakelib/64/libGL.so
		else
			rm $TMPDIR/opt/$APPNAME/fakelib/libGL.so
			ln -fs /usr/lib/librrfaker.so $TMPDIR/opt/$APPNAME/fakelib/libGL.so
		fi

	fi

	sudo chown -Rh root:root $TMPDIR/*
	dpkg -b $TMPDIR $PACKAGE_NAME\_$VERSION\_$DEBARCH.deb
}

APPNAME=@CMAKE_PROJECT_NAME@
VERSION=@VERSION@
BUILD=@BUILD@
DEBARCH=@DEBARCH@

makedeb 0
if [ "$DEBARCH" = "i386" ]; then makedeb 1; fi

exit
