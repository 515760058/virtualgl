#!/bin/sh
GEOPROBE_USEGLX=1
export GEOPROBE_USEGLX
PROMAGIC_USEGLX=1
export PROMAGIC_USEGLX

case `uname -s` in

Linux)

if [ -e /usr/lib64/tls/libGL.so.1 ]
then
     export RRGLLIB=/usr/lib64/tls/libGL.so.1
else
     export RRGLLIB=/usr/lib64/libGL.so.1
fi
export RRX11LIB=/usr/X11R6/lib64/libX11.so.6
LD_PRELOAD=librrfaker.so:libGL.so.1 ${1+"$@"}

;;

IRIX*)

RRGLLIB=/usr/lib64/libGL.so RRX11LIB=/usr/lib64/libX11.so.1 _RLD_LIST=librrfaker.so:libGL.so:libC.so:libpthread.so:DEFAULT ${1+"$@"}

;;

SunOS)

RRGLLIB=/usr/lib/sparcv9/libGL.so RRX11LIB=/usr/X/lib/sparcv9/libX11.so LD_PRELOAD=librrfaker.so:libGL.so ${1+"$@"}

;;

esac
